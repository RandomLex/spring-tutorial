<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="init" default-destroy-method="destroy"
>

        <bean id="john" class="com.barzykin.model.Student" init-method="initStudent" destroy-method="destroyStudent">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John"/>
        <constructor-arg index="2">
            <map>
                <entry key="C" value="8"/>
                <entry key="Python" value="9"/>
                <entry key="Java" value="10"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="bob" class="com.barzykin.model.Student">
        <property name="id" value="1"/>
        <property name="name" value="Bob"/>
        <property name="marks">
            <map>
                <entry key="C" value="7"/>
                <entry key="Python" value="8"/>
                <entry key="Java" value="9"/>
            </map>
        </property>
    </bean>

    <bean id="anna" class="com.barzykin.model.Student">
        <constructor-arg name="id" value="3"/>
        <constructor-arg name="name" value="Anna"/>
        <property name="marks">
            <map>
                <entry key="C" value="6"/>
                <entry key="Python" value="7"/>
                <entry key="Java" value="8"/>
            </map>

        </property>
    </bean>

    <bean id="alex" class="com.barzykin.model.Teacher">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Alex"/>
        <constructor-arg name="salary" value="1000"/>
    </bean>

    <bean id="java" class="com.barzykin.model.Group">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Java"/>
        <constructor-arg name="teacher" ref="alex"/>
        <property name="students">
            <list>
                <ref bean="john"/>
                <ref bean="bob"/>
                <ref bean="anna"/>
            </list>
        </property>
    </bean>

</beans>